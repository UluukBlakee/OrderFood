@model IEnumerable<OrderFood.Models.Cafe>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Заведения</h1>
<div class="row justify-content-center mt-3">
        @foreach (var card in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card p-3 h-100 d-flex flex-column style="width: 18rem;">
                    <img src="@card.Image" class="card-img-top h-100" alt="Product Image">
                    <div class="card-body text-center">
                        <h6 class="card-title fs-5 fw-bold mb-2">@card.Name</h6>
                        <a asp-action="Details" asp-route-id="@card.Id" class="btn btn-primary">Подробнее</a>
                        @if(User.IsInRole("admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@card.Id"  class="btn btn-danger">Удалить</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
